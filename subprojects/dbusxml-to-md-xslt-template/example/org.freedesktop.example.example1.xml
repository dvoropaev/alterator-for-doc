<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
  <interface name="org.freedesktop.example.example1">
	<doc:summary>Some summary of example</doc:summary>
	<doc:summary xml:lang="ru_RU">Краткое описание примера</doc:summary>
    <method name="Foo">
      <doc:summary>Some summary of Foo</doc:summary>
      <doc:summary xml:lang="ru_RU">Краткое описание Foo</doc:summary>
      <arg type="as" name="arg1" direction="in">
        <doc:summary>Some summary of arg1</doc:summary>
        <doc:summary xml:lang="ru_RU">Краткое описание arg1</doc:summary>
      </arg>
      <arg type="s" name="arg2" direction="in">
        <doc:summary>Some summary of arg2</doc:summary>
        <doc:summary xml:lang="ru_RU">Краткое описание arg2</doc:summary>
      </arg>
    </method>
    <method name="EmptyFoo">
	  <doc:summary>Some summary of EmptyFoo</doc:summary>
      <doc:summary xml:lang="ru_RU">Краткое описание EmptyFoo</doc:summary>
    </method>
    <method name="DetailFoo">
      <doc:summary>Some summary of DetailFoo</doc:summary>
      <doc:summary xml:lang="ru_RU">Краткое описание DetailFoo</doc:summary>
