        <doc:summary>Some summary of action_id</doc:summary>
        <doc:summary xml:lang="ru_RU">Краткое описание action_id</doc:summary>
        <doc:detail>
		  Some list:
		  - `some first item`;
		  - `some second item`.
        </doc:detail> 
        <doc:detail xml:lang="ru_RU">
		  Список:
		  - `первый пункт`;
		  - `второй пункт`.
        </doc:detail>
      </arg>
      <arg type="as" name="out1" direction="out">
        <doc:summary>Some summary of out1</doc:summary>
        <doc:summary xml:lang="ru_RU">Краткое описание out1</doc:summary>
      </arg>
      <arg type="i" name="out2" direction="out">
        <doc:summary>Some summary of out2</doc:summary>
        <doc:summary xml:lang="ru_RU">Краткое описание out2</doc:summary>
      </arg>
    </method>
    <signal name="OnSomething">
      <doc:summary>Some summary of OnSomething</doc:summary>
      <doc:summary xml:lang="ru_RU">Краткое описание OnSomething</doc:summary>
      <arg type="s" name="">
        <doc:summary>Some summary of ... what?</doc:summary>
        <doc:summary xml:lang="ru_RU">Краткое описание сигнала</doc:summary>
      </arg>
    </signal>
