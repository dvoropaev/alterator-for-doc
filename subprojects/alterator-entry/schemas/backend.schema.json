{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Alterator Backend",
    "type": "object",
    "$comment": "TODO(chernigin): figure out actually required properties",
    "$defs": {
        "executor_module_validation": {
            "anyOf": [
                {
                    "not": {
                        "properties": {
                            "module": {
                                "const": "executor"
                            }
                        },
                        "required": [
                            "module"
                        ]
                    }
                },
                {
                    "properties": {
                        "methods": {
                            "additionalProperties": {
                                "required": [
                                    "execute"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "backend3_module_validation": {
            "anyOf": [
                {
                    "not": {
                        "properties": {
                            "module": {
                                "const": "backend3"
                            }
                        },
                        "required": [
                            "module"
                        ]
                    }
                },
                {
                    "properties": {
                        "methods": {
                            "additionalProperties": {
                                "required": [
                                    "backend3"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "backend3_or_execute": {
            "oneOf": [
                {
                    "properties": {
                        "backend3": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "backend3"
                    ]
                },
                {
                    "properties": {
                        "execute": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "execute"
                    ]
                }
            ]
        }
    },
    "propertyNames": {
        "enum": [
            "type",
            "name",
            "module",
            "interface",
            "action_id",
            "thread_limit",
            "methods"
        ]
    },
    "required": [
        "type",
        "name",
        "module",
        "interface",
        "methods"
    ],
    "properties": {
        "type": {
            "type": "string",
            "const": "Backend"
        },
        "name": {
            "type": "string"
        },
        "module": {
            "type": "string"
        },
        "interface": {
            "$comment": "TODO(chernigin): add examples",
            "type": "string"
        },
        "action_id": {
            "type": "string"
        },
        "thread_limit": {
            "type": "integer",
            "$comment": "TODO(chernigin): figure out if thread_limit could be 0",
            "minimum": 1
        },
        "methods": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "propertyNames": {
                    "enum": [
                        "execute",
                        "backend3",
                        "timeout",
                        "thread_limit",
                        "stdout_strings",
                        "stderr_strings",
                        "stdout_bytes",
                        "stdout_byte_limit",
                        "stdout_strings_limit",
                        "stderr_strings_limit",
                        "stdout_signal_name",
                        "stderr_signal_name",
                        "action_id",
                        "environment",
                        "stdin_string",
                        "stdout_byte_arrays",
                        "stdout_string_array",
                        "stdout_json",
                        "exit_status"
                    ]
                },
                "properties": {
                    "execute": {
                        "type": "string"
                    },
                    "backend3": {
                        "type": "string"
                    },
                    "timeout": {
                        "type": "number",
                        "units": "seconds",
                        "$comment": "NOTE(chernigin): 0 means wait infinitely",
                        "minimum": 0
                    },
                    "thread_limit": {
                        "type": "number",
                        "$comment": "TODO(chernigin): figure out if thread_limit could be 0",
                        "minimum": 1
                    },
                    "stdout_strings": {
                        "type": "boolean"
                    },
                    "stdout_bytes": {
                        "type": "boolean"
                    },
                    "stderr_strings": {
                        "type": "boolean"
                    },
                    "stdout_byte_limit": {
                        "type": "number",
                        "minimum": 0
                    },
                    "stdout_strings_limit": {
                        "type": "number",
                        "minimum": 0
                    },
                    "stderr_strings_limit": {
                        "type": "number",
                        "minimum": 0
                    },
                    "stdout_signal_name": {
                        "type": "string"
                    },
                    "stderr_signal_name": {
                        "type": "string"
                    },
                    "action_id": {
                        "type": "string"
                    },
                    "environment": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "propertyNames": {
                                "enum": [
                                    "default",
                                    "required"
                                ]
                            },
                            "properties": {
                                "default": {
                                    "type": "string"
                                },
                                "required": {
                                    "type": "boolean"
                                }
                            }
                        }
                    },
                    "stdin_string": {
                        "type": "boolean"
                    },
                    "stdout_byte_arrays": {
                        "type": "boolean"
                    },
                    "stdout_string_array": {
                        "type": "boolean"
                    },
                    "stdout_json": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "[A-Za-z0-9_]*$"
                        }
                    },
                    "exit_status": {
                        "type": "boolean"
                    }
                },
                "allOf": [
                    {
                        "$ref": "#/$defs/backend3_or_execute"
                    }
                ]
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/executor_module_validation"
        },
        {
            "$ref": "#/$defs/backend3_module_validation"
        }
    ]
}
