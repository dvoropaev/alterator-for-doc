<!DOCTYPE node PUBLIC
"-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="org.altlinux.alterator.service1">
        <doc:doc>
            <doc:description>
                <doc:para>
                    Service control interface.
                </doc:para>
            </doc:description>
        </doc:doc>

        <method name="Info">
            <arg type='ay' name='stdout_bytes' direction='out'></arg>
            <arg type="i" name="response" direction="out"></arg>
        </method>

        <method name="ListFacilities">
            <arg type='as' name='stdout_strings' direction='out'></arg>
            <arg type='i' name='response' direction='out'></arg>
        </method>

        <method name="FacilityInfo">
            <arg type='s' name='facility' direction='in'></arg>
            <arg type='ay' name='stdout_bytes' direction='out'></arg>
            <arg type='i' name='response' direction='out'></arg>
        </method>

        <method name="FacilitiesInfo">
            <arg type="as" name="stdout_string_array" direction="out"></arg>
            <arg type="i" name="response" direction="out"></arg>
        </method>

        <method name="Get">
            <arg type='s' name='facility' direction='in'></arg>
            <arg type='ay' name='stdout_bytes' direction='out'></arg>
            <arg type='as' name='stderr_strings' direction='out'></arg>
            <arg type='i' name='response' direction='out'></arg>
        </method>

        <method name="GetAll">
            <arg type='as' name='stdout_strings' direction='out'></arg>
            <arg type='as' name='stderr_strings' direction='out'></arg>
            <arg type='i' name='response' direction='out'></arg>
        </method>

        <method name="Set">
            <arg type='s' name='facility' direction='in'></arg>
            <arg type='s' name='status' direction='in'></arg>
            <arg type='as' name='stderr_strings' direction='out'></arg>
            <arg type='i' name='response' direction='out'></arg>
        </method>
    </interface>
</node>
