<!DOCTYPE node PUBLIC
"-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="org.altlinux.alterator.batch_control1">
        <doc:summary xml:lang="en_US">Provide batch access to control facilities and their descriptions.</doc:summary>
        <doc:summary xml:lang="ru_RU">Предоставляет пакетный доступ к facilities и их описаниям, используемым утилитой control.</doc:summary>

        <method name="Info">
            <doc:summary xml:lang="en_US">Return the control.object descriptor contents.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает содержимое файла-описателя control.object.</doc:summary>
            <arg type='ay' name='stdout_bytes' direction='out'>
                <doc:summary xml:lang="en_US">Contents of /usr/share/alterator/objects/control.object.</doc:summary>
                <doc:summary xml:lang="ru_RU">Содержимое `/usr/share/alterator/objects/control.object`.</doc:summary>
            </arg>
            <arg type="i" name="response" direction="out">
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>

        <method name="ListFacilities">
            <doc:summary xml:lang="en_US">List facility names from /etc/control.d/facilities.</doc:summary>
            <doc:summary xml:lang="ru_RU">Перечисляет имена facilities из `/etc/control.d/facilities`.</doc:summary>
            <arg type='as' name='stdout_strings' direction='out'>
                <doc:summary xml:lang="en_US">Facility names available in the control subsystem.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имена facilities, доступные в подсистеме control.</doc:summary>
            </arg>
            <arg type='i' name='response' direction='out'>
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>

        <method name="FacilityInfo">
            <doc:summary xml:lang="en_US">Return a facility control entry by name.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает control-описание facility по имени.</doc:summary>
            <arg type='s' name='facility' direction='in'>
                <doc:summary xml:lang="en_US">Facility name from /etc/control.d/facilities.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имя facility из `/etc/control.d/facilities`.</doc:summary>
            </arg>
            <arg type='ay' name='stdout_bytes' direction='out'>
                <doc:summary xml:lang="en_US">Control entry content for the selected facility.</doc:summary>
                <doc:summary xml:lang="ru_RU">Содержимое control-описания выбранной facility.</doc:summary>
                <doc:detail xml:lang="en_US">Searched in /usr/share/alterator/control and /etc/alterator/control/autogenerated-control-&lt;facility&gt;.control.</doc:detail>
                <doc:detail xml:lang="ru_RU">Поиск выполняется в `/usr/share/alterator/control` и `/etc/alterator/control/autogenerated-control-&lt;facility&gt;.control`.</doc:detail>
            </arg>
            <arg type='i' name='response' direction='out'>
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>

        <method name="FacilitiesInfo">
            <doc:summary xml:lang="en_US">Return control entries for all facilities.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает control-описания для всех facilities.</doc:summary>
            <arg type="as" name="stdout_string_array" direction="out">
                <doc:summary xml:lang="en_US">Array of control entry contents.</doc:summary>
                <doc:summary xml:lang="ru_RU">Массив строк с содержимым control-описаний.</doc:summary>
                <doc:detail xml:lang="en_US">Order corresponds to ListFacilities.</doc:detail>
                <doc:detail xml:lang="ru_RU">Порядок соответствует ListFacilities.</doc:detail>
            </arg>
            <arg type="i" name="response" direction="out">
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>

        <method name="Get">
            <doc:summary xml:lang="en_US">Return current state of the specified facility.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает текущее состояние указанной facility.</doc:summary>
            <arg type='s' name='facility' direction='in'>
                <doc:summary xml:lang="en_US">Facility name.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имя facility.</doc:summary>
            </arg>
            <arg type='ay' name='stdout_bytes' direction='out'>
                <doc:summary xml:lang="en_US">Facility state as returned by control &lt;facility&gt; status.</doc:summary>
                <doc:summary xml:lang="ru_RU">Состояние facility, возвращаемое командой `control &lt;facility&gt; status`.</doc:summary>
            </arg>
            <arg type='as' name='stderr_strings' direction='out'>
                <doc:summary xml:lang="en_US">Diagnostics from the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Диагностические сообщения помощника.</doc:summary>
            </arg>
            <arg type='i' name='response' direction='out'>
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>

        <method name="GetAll">
            <doc:summary xml:lang="en_US">Return states of all facilities.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает состояния всех facilities.</doc:summary>
            <arg type='as' name='stdout_strings' direction='out'>
                <doc:summary xml:lang="en_US">State strings returned by the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Строки состояний, возвращаемые помощником.</doc:summary>
            </arg>
            <arg type='as' name='stderr_strings' direction='out'>
                <doc:summary xml:lang="en_US">Diagnostics from the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Диагностические сообщения помощника.</doc:summary>
            </arg>
            <arg type='i' name='response' direction='out'>
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>

        <method name="Set">
            <doc:summary xml:lang="en_US">Set facility state.</doc:summary>
            <doc:summary xml:lang="ru_RU">Устанавливает состояние facility.</doc:summary>
            <arg type='s' name='facility' direction='in'>
                <doc:summary xml:lang="en_US">Facility name.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имя facility.</doc:summary>
            </arg>
            <arg type='s' name='status' direction='in'>
                <doc:summary xml:lang="en_US">Target state passed to control &lt;facility&gt;.</doc:summary>
                <doc:summary xml:lang="ru_RU">Целевое состояние, передаваемое в `control &lt;facility&gt;`.</doc:summary>
            </arg>
            <arg type='as' name='stderr_strings' direction='out'>
                <doc:summary xml:lang="en_US">Diagnostics from the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Диагностические сообщения помощника.</doc:summary>
            </arg>
            <arg type='i' name='response' direction='out'>
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>
    </interface>
</node>
