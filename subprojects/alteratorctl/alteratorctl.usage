alteratorctl <COMMAND>;

<COMMAND> ::= diagnostic <DIAGNOSTIC-SUBCOMMAND>
            | packages   <PACKAGES-SUBCOMMAND>
            | components <COMPONENTS-SUBCOMMAND>;

<DIAGNOSTIC-SUBCOMMAND> ::= list | run;

<PACKAGES-SUBCOMMAND> ::= list [--installed]
                        | repo (list | add | rm)
                        | update
                        | install
                        | reinstall
                        | remove;

<COMPONENTS-SUBCOMMAND> ::= install | remove | list;
