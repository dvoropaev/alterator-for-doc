<!DOCTYPE node PUBLIC
    "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
    "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="org.altlinux.alterator.component-categories1">
        <doc:summary xml:lang="en_US">Provides access to component category descriptors, descriptions, and list of categories.</doc:summary>
        <doc:summary xml:lang="ru_RU">Предоставляет доступ к описателям категорий компонентов, их описаниям и списку категорий.</doc:summary>
        <method name="Info">
            <doc:summary xml:lang="en_US">Returns the .category descriptor of the specified category.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает описатель категории в формате .category.</doc:summary>
            <arg type="s" name="name" direction="in">
                <doc:summary xml:lang="en_US">Category name.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имя категории.</doc:summary>
            </arg>
            <arg type="ay" name="stdout_bytes" direction="out">
                <doc:summary xml:lang="en_US">Contents of /usr/share/alterator/components/categories/&lt;name&gt;/&lt;name&gt;.category.</doc:summary>
                <doc:summary xml:lang="ru_RU">Содержимое `/usr/share/alterator/components/categories/&lt;name&gt;/&lt;name&gt;.category`.</doc:summary>
            </arg>
            <arg type="i" name="response" direction="out">
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>
        <method name="Description">
            <doc:summary xml:lang="en_US">Returns the localized category description.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает локализованное описание категории.</doc:summary>
            <arg type="s" name="name" direction="in">
                <doc:summary xml:lang="en_US">Category name.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имя категории.</doc:summary>
            </arg>
            <arg type="ay" name="stdout_bytes" direction="out">
                <doc:summary xml:lang="en_US">Contents of description.&lt;locale&gt;.html, description.&lt;lang&gt;.html, or description.html (selected by LC_ALL, default en_US).</doc:summary>
                <doc:summary xml:lang="ru_RU">Содержимое `description.&lt;locale&gt;.html`, `description.&lt;lang&gt;.html` или `description.html` (выбор по LC_ALL, по умолчанию en_US).</doc:summary>
            </arg>
            <arg type="i" name="response" direction="out">
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>
        <method name="DescriptionRaw">
            <doc:summary xml:lang="en_US">Returns the localized category description in raw format.</doc:summary>
            <doc:summary xml:lang="ru_RU">Возвращает локализованное описание категории в сыром формате.</doc:summary>
            <arg type="s" name="name" direction="in">
                <doc:summary xml:lang="en_US">Category name.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имя категории.</doc:summary>
            </arg>
            <arg type="ay" name="stdout_bytes" direction="out">
                <doc:summary xml:lang="en_US">Contents of description.&lt;locale&gt;.md, description.&lt;lang&gt;.md, or description.md (selected by LC_ALL, default en_US).</doc:summary>
                <doc:summary xml:lang="ru_RU">Содержимое `description.&lt;locale&gt;.md`, `description.&lt;lang&gt;.md` или `description.md` (выбор по LC_ALL, по умолчанию en_US).</doc:summary>
            </arg>
            <arg type="i" name="response" direction="out">
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>
        <method name="List">
            <doc:summary xml:lang="en_US">Lists component categories.</doc:summary>
            <doc:summary xml:lang="ru_RU">Перечисляет категории компонентов.</doc:summary>
            <arg type="as" name="stdout_strings" direction="out">
                <doc:summary xml:lang="en_US">Category names.</doc:summary>
                <doc:summary xml:lang="ru_RU">Имена категорий.</doc:summary>
            </arg>
            <arg type="i" name="response" direction="out">
                <doc:summary xml:lang="en_US">Exit code of the helper.</doc:summary>
                <doc:summary xml:lang="ru_RU">Код завершения помощника.</doc:summary>
                <doc:detail xml:lang="en_US">0 — success, != 0 — error.</doc:detail>
                <doc:detail xml:lang="ru_RU">0 — успех, != 0 — ошибка.</doc:detail>
            </arg>
        </method>
    </interface>
</node>
